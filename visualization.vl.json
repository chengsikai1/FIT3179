{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000,
  "height": 1000,
  "title": "the wildfire in California by area burned",
  
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Shawn-monash/FIT3179_homework/main/js/CA_counties.json",
        "format": {"type": "topojson", "feature": "CA_counties"}
      },

      "projection": {"type": "albersUsa"},

      "mark": {
        "type": "geoshape", 
        "fill": "lightgray", 
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chengsikai1/FIT3179/main/California_Fire_Incidents.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "AcresBurned",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 2000, 5000],
            "range": [20, 80, 160, 320]
          },
          "legend": {"format": "0.1s"}
        }
      }

    }
  ]

}
